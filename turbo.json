{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "check-types": {
            "dependsOn": ["build"]
        },
        "@xdata3os/agent#check-types": {
            "dependsOn": [
                "@xdata3os/plugin-solana#build",
                "@xdata3os/plugin-direct#build"
            ]
        },
        "build": {
            "outputs": ["dist/**"],
            "dependsOn": ["^@xdata3os/agentcontext#build"]
        },
        "@xdata3os/client-direct#build": {
            "outputs": ["dist/**"],
            "dependsOn": []
        },
        "dev": {
            "persistent": true,
            "cache": true
        }
    }
}
